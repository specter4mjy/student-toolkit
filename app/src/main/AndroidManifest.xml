<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ml.mk.jm.ay.ak.studenttoolkit" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lauchicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".calendar.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".calendar.EventDetailActivity" >
        </activity>

        <activity
            android:name=".todo.ToDoActivity"
            android:label="@string/title_activity_to_do"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".todo.EditToDoActivity"
            android:label="@string/title_activity_edit_to_do"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".todo.ShowToDoActivity" >
        </activity>
        <activity android:name=".todo.NewToDoActivity" >
        </activity>
        <activity
            android:name=".todo.PostponeToDo_Activity"
            android:label="@string/title_activity_postpone_to_do_"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".calendar.EditEventActivity"
            android:label="@string/title_activity_edit_event"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".map.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>
